<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:background="@drawable/cardbackground"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="184dp">
    <TextView
        android:id="@+id/petient_number"
        android:layout_marginTop="10dp"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:text="000002"/>
    <ImageView
        android:id="@+id/petient_head"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:background="@drawable/boy_default"
        android:layout_height="wrap_content" />
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="18dp"
       android:gravity="center_vertical"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/patient_name"
           android:text="李四"
           android:textSize="12sp"
           android:textColor="#666666"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <TextView
           android:layout_marginLeft="5dp"
           android:id="@+id/patient_age"
           android:text="32岁"
           android:textSize="12sp"
           android:textColor="#666666"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <ImageView
           android:id="@+id/patient_sex"
           android:layout_marginLeft="4dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/boy"/>
   </LinearLayout>
    <TextView
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="失眠"
        android:textSize="10sp"
        android:textColor="#999999"
        android:id="@+id/patient_diseas"/>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/patient_record"
            android:layout_width="wrap_content"
            android:textSize="11sp"
            android:text="记录"
            android:textColor="#E99ABA"
            android:layout_height="16dp" />
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/line"/>
        <TextView
            android:id="@+id/patient_tran"
            android:layout_width="wrap_content"
            android:textSize="11sp"
            android:text="训练"
            android:textColor="#9AA5E9"
            android:layout_height="16dp" />
    </LinearLayout>
</LinearLayout>